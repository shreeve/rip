{
  "name": "@rip/lang",
  "version": "0.2.1",
  "description": "A clean, simple language that compiles to JavaScript. No classes, just data.",
  "type": "module",
  "main": "./lib/index.js",
  "exports": {
    ".": {
      "bun": "./lib/index.js",
      "deno": "./lib/index.js",
      "node": "./lib/index.js",
      "browser": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./compiler": "./lib/compiler.js",
    "./lexer": "./lib/lexer.js",
    "./parser": "./lib/parser.js",
    "./rewriter": "./lib/rewriter.js",
    "./grammar": "./lib/grammar.js",
    "./solar": "./lib/solar.js"
  },
  "bin": {
    "rip": "./bin/rip"
  },
  "scripts": {
    "compile": "coffee -c -b -o lib/ src/",
    "test": "bun test test/unit",
    "test:unit": "bun test test/unit",
    "test:features": "./test/run-rip-tests.js",
    "test:all": "bun run test:unit && bun run test:features",
    "test:watch": "bun test --watch test/unit",
    "test:coverage": "bun test --coverage test/unit",
    "rip": "./bin/rip"
  },
  "keywords": ["rip", "language", "compiler", "simple", "clean", "ast", "es6", "esm", "bun", "deno", "node"],
  "author": "Steve Shreeve",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shreeve/rip.git"
  },
  "homepage": "https://github.com/shreeve/rip",
  "engines": {
    "node": ">=16",
    "bun": ">=1.0.0"
  },
  "runtimes": {
    "primary": "bun",
    "supported": ["bun", "deno", "node", "browser"]
  },
  "highlights": {
    "lines": "~1000 total",
    "ast": "Simple objects, no classes",
    "performance": "108,000 compilations/sec"
  },
  "devDependencies": {},
  "dependencies": {}
}
