# Variables and basic operations
name = "Rip"
version = 0.1
console.log "\nLanguage: #{name} v#{version}"

# Functions with arrow syntax
add = (a, b) -> a + b
multiply = (x, y) -> x * y
result = add(5, multiply(3, 4))
console.log "Math: 5 + (3 * 4) = #{result}"

# Object literals with methods
developer =
  name: "Steve"
  language: "Rip"
  experience: 10
  introduce: ->
    console.log "\nHi! I'm #{@name} and I love #{@language}!"
  canCode: -> @experience > 5

developer.introduce()
console.log "Can code? #{developer.canCode()}"

# Classes
class Animal
  constructor: (@name, @sound) ->
  
  speak: ->
    console.log "#{@name} says: #{@sound}"

class Dog extends Animal
  constructor: (name) ->
    super name, "Woof!"
  
  wagTail: ->
    console.log "#{@name} wags tail happily!"

console.log "\nðŸ• Pet Demo:"
myDog = new Dog "Buddy"
myDog.speak()
myDog.wagTail()

# Array operations
numbers = [1, 2, 3, 4, 5]
doubled = (n * 2 for n in numbers)
console.log "\nNumbers: #{numbers}"
console.log "Doubled: #{doubled}"

# Conditionals
score = 85
grade = if score >= 90
  "A"
else if score >= 80
  "B"
else if score >= 70
  "C"
else
  "F"

console.log "\nScore: #{score}, Grade: #{grade}"

# Destructuring
[first, second, ...rest] = [10, 20, 30, 40, 50]
console.log "\nFirst: #{first}, Second: #{second}, Rest: #{rest}"

# Default parameters and string templates
greet = (name = "World", emotion = "happy") ->
  console.log "Hello, #{name}! Hope you're #{emotion}!"

console.log "\nðŸ‘‹ Greetings:"
greet()
greet "Rip User", "excited"

# Object destructuring and spread
config =
  host: "localhost"
  port: 3000
  secure: true

{host, port} = config
console.log "\nServer: #{host}:#{port}"

# Higher-order functions
transform = (arr, fn) ->
  fn(x) for x in arr

squared = transform [1, 2, 3, 4], (n) -> n * n
console.log "Squared: #{squared}"

