  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rip-ecosystem/application-server"
  },
  "dependencies": {
    "hono": "^4.8.12"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19"
  }
}