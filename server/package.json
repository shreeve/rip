{
  "name": "rip-application-server",
  "version": "2.0.0",
  "description": "Modern Bun-powered application server with hot reload and multi-process architecture",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "./start.sh dev",
    "start": "./start.sh prod",
    "stop": "./stop.sh",
    "server": "bun server.ts",
    "manager": "bun manager.ts",
    "worker": "bun worker.ts",
    "test": "curl -s http://localhost:3000",
    "health": "curl -s http://localhost:3000/health | jq .",
    "metrics": "curl -s http://localhost:3000/metrics",
    "load-test": "wrk -t4 -c10 -d10s http://localhost:3000",
    "stress-test": "wrk -t12 -c100 -d60s http://localhost:3000"
  },
  "keywords": [
    "rip",
    "application-server",
    "bun",
    "http",
    "load-balancer",
    "unix-sockets",
    "hot-reload",
    "high-performance",
    "modern"
  ],
